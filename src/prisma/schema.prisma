generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Settings {
    id            String @id @default(uuid())
    refreshSecret String
    accessSecret  String
}

model User {
    id           String         @id @default(uuid())
    email        String         @unique
    name         String
    password     String
    refreshToken RefreshToken[]
}

model RefreshToken {
    id     String @id @default(uuid())
    token  String @unique
    user   User   @relation(fields: [userId], references: [id])
    userId String
}
